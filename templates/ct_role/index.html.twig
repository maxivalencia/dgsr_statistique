{% extends 'base.html.twig' %}

{% block title %}CtRole index{% endblock %}

{% block body %}
    <h1>Liste Role</h1>

    <table id="user_liste" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Rôle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_role in ct_roles %}
            <tr>
                <td>{{ ct_role.id }}</td>
                <td>{{ ct_role.roleName }}</td>
                <td>
                    <a href="{{ path('ct_role_show', {'id': ct_role.id}) }}">voir</a>
                    <a href="{{ path('ct_role_edit', {'id': ct_role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ct_role_new') }}">Créer</a>
{% endblock %}
