{% extends 'base.html.twig' %}

{% block title %}CtUsage index{% endblock %}

{% block body %}
    <h1>CtUsage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UsgLibelle</th>
                <th>UsgValidite</th>
                <th>UsgCreated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_usage in ct_usages %}
            <tr>
                <td>{{ ct_usage.id }}</td>
                <td>{{ ct_usage.usgLibelle }}</td>
                <td>{{ ct_usage.usgValidite }}</td>
                <td>{{ ct_usage.usgCreated ? ct_usage.usgCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ct_usage_show', {'id': ct_usage.id}) }}">show</a>
                    <a href="{{ path('ct_usage_edit', {'id': ct_usage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ct_usage_new') }}">Create new</a>
{% endblock %}
